<main class="logincontent">
		<div class="left">
			<div class="logo">
				<p class="app_ja_title">食札作成アプリ</p>
				<h1 class="app_title">Meal Card Studio</h1>
				<img src="/assets/logo.png" alt="ロゴ画像">
			</div>
		</div>
		<div class="right">
				
				<h2>ログイン</h2>
				<%= form_with model:@user,url:login_path,local:true do |f| %>
				<div>
					<%= f.label :id,"ユーザーID" %>
					<%= f.text_field :id %>
				</div>
				<div>
					<%= f.label :password,"パスワード" %>
					<%= f.password_field :password %>
				</div>
				<div>
					<%= f.submit "ログイン" %>
				</div>
			
			<% end %>
			<%= link_to '新規ユーザー登録', new_home_path, class: 'subbtn' %>
				
				
		</div>
</main>
